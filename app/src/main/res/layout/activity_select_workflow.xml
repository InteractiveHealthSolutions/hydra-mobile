<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.SelectWorkFlow">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/app_gradient"
            android:gravity="center"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:text="@string/title_activity_select_workflow"
            android:textColor="@color/White"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_below="@id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="8">

            <ScrollView
                android:layout_weight="7.5"
                android:id="@+id/scrollViewWorkflows"
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_main_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/rg_workflow"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </RadioGroup>

                </LinearLayout>
            </ScrollView>

            <Button
                android:layout_weight="0.5"
                android:id="@+id/submitWorkflow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_rounded_shap"
                android:onClick="onChange"
                android:padding="10dp"
                android:text="@string/submit"
                android:textColor="@color/White"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>
</layout>