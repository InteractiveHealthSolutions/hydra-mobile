<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.activity.SelectWorkFlow">

        <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/app_gradient"
                android:gravity="center"
                android:paddingBottom="25dp"
                android:paddingTop="25dp"
                android:text="@string/title_activity_select_workflow"
                android:textColor="@color/White"
                android:textSize="20sp"
                android:textStyle="bold"/>

        <ScrollView
                android:id="@+id/scrollViewWorkflows"
                android:layout_width="match_parent"
                android:layout_below="@+id/tvTitle"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:id="@+id/ll_main_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <RadioGroup
                        android:id="@+id/rg_workflow"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                </RadioGroup>

            </LinearLayout>
        </ScrollView>

        <Button
                android:id="@+id/submitWorkflow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:onClick="onChange"
                android:padding="10dp"
                android:textColor="@color/White"
                android:layout_margin="10dp"
                android:background="@drawable/button_rounded_shap"
                android:layout_alignParentBottom="true"
                android:text="@string/submit"/>
    </RelativeLayout>
</layout>