<?xml version="1.0" encoding="utf-8"?>
<layout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_gradient_light"
        android:fillViewport="true"
        android:overScrollMode="always">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_32dp"
            android:background="@drawable/app_gradient_light"
            android:orientation="vertical"
            android:padding="@dimen/dimen_16dp">

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/multilanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:elevation="@dimen/dimen_12dp"
                    android:tint="@color/colorPrimaryDark"
                    app:srcCompat="@drawable/ic_language" />

                <ImageView
                    android:id="@+id/img_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:elevation="@dimen/dimen_12dp"
                    android:tint="@color/colorPrimaryDark"
                    app:srcCompat="@drawable/ic_settings" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/login_container_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:padding="@dimen/dimen_16dp">


                <ImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:src="@drawable/hydra_logo" />

                <TextView
                    android:id="@+id/tvLungHealth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivLogo"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:text="@string/org_name"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvLungHealth"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:text="@string/corporation_name"
                    android:textSize="22sp"
                    android:visibility="gone" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:padding="20dp">

                    <EditText

                        android:id="@+id/edt_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_rounded_shap"
                        android:drawableLeft="@drawable/ic_userprofile"
                        android:drawablePadding="8dp"
                        android:drawableTint="@color/app_icon_color"
                        android:hint="@string/edt_username_hint"
                        android:inputType="textPersonName"
                        android:padding="@dimen/dimen_12dp" />

                    <LinearLayout
                        android:id="@+id/layout_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/edt_username"
                        android:layout_marginTop="@dimen/dimen_16dp"
                        android:background="@drawable/edittext_rounded_shap"
                        android:orientation="horizontal"
                        android:padding="@dimen/dimen_12dp">

                        <EditText
                            android:id="@+id/edt_password"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:background="@drawable/edittext_plain_shape"
                            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                            android:drawablePadding="8dp"
                            android:drawableTint="@color/app_icon_color"
                            android:hint="@string/edt_password_hint"
                            android:inputType="textPassword" />

                        <ImageView
                            android:id="@+id/login_eye"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.01"
                            android:gravity="center"
                            android:paddingRight="8dp"
                            android:src="@drawable/login_cross_eye">

                        </ImageView>

                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/check_offline_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layout_password"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:buttonTint="@color/app_icon_color"
                        android:text="@string/check_offline_mode" />

                    <Button
                        android:id="@+id/btn_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/check_offline_mode"
                        android:layout_marginTop="@dimen/dimen_33dp"
                        android:background="@drawable/button_rounded_shap"
                        android:text="@string/login_btn_text"
                        android:textColor="@color/White"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center"
                        android:gravity="end"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:visibility="gone">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tpowered_by"
                            android:textSize="20sp"
                            android:visibility="gone">

                        </TextView>

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="@string/hydra_text"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:visibility="gone"></TextView>
                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</layout>
