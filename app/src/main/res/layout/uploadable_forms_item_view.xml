<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:layout_margin="@dimen/dimen_5dp"
    android:elevation="@dimen/dimen_24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blue_borders"
        android:orientation="vertical">

        <TextView
            android:id="@+id/formName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/app_title_name"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/singleLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.5">


            <ImageView
                android:id="@+id/genderImage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center"
                android:padding="10dp"
                android:src="@drawable/ic_form">

            </ImageView>
            <!--Content-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.8"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dimen_10dp">


                <TextView
                    android:id="@+id/tv_patient_identifier"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="@string/identifier"
                    android:textColor="@color/bootstrap_gray_light"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_patient_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:maxLines="2"
                    android:text="@string/name_sample"
                    android:textColor="@color/bootstrap_gray_light"
                    android:textSize="15sp" />


            </LinearLayout>
            <!--other details-->


        </LinearLayout>

        <TextView
            android:id="@+id/lastUploadError"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:layout_margin="15dp"
            android:layout_weight="0.3"
            android:background="@drawable/circular_button"
            android:backgroundTint="@color/Red"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Last Upload Error"
            android:textColor="@color/White"
            android:textSize="18sp"
            android:textStyle="bold"></TextView>

    </LinearLayout>

</androidx.cardview.widget.CardView>