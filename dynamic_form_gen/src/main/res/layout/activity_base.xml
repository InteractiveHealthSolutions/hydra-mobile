<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fdfdfd">


  <!--  <LinearLayout
        android:id="@+id/llRatingBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/drop_shadow_bottom"
        android:gravity="center">


    </LinearLayout>-->
    <TextView
        android:id="@+id/tvRatings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:shadowColor="@color/DarkGray"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="3.0"
        android:textColor="@color/dark_blue_203c61"
        android:textSize="18sp"
        android:visibility="gone"/>


    <include
            android:id="@+id/header"
            layout="@layout/patient_info_display"/>
    <include
        android:id="@+id/formHeader"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/header"
        layout="@layout/form_name_display"/>

    <ScrollView
        android:id="@+id/svQuestions"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/formHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/llWidgetsHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                tools:ignore="MergeRootFrame">
            </LinearLayout>

            <Button
                android:id="@+id/btnSave"
                style="@style/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:text="@string/save"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>